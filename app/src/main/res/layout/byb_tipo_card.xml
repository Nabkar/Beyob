<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="45dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true">

    <ImageView
        android:id="@+id/tipo_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/byb_tipo_card_image_height"
        android:background="?attr/colorPrimaryDark"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"/>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical"-->
        <!--android:padding="16dp">-->

        <TextView
            android:id="@+id/tipo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/byb_tipo_title"
            android:textAlignment="center"
            android:background="#8c000000"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textSize="@dimen/byb_tipo_card_text_size"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/tipo_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/byb_tipo_descripcion"
            android:textAlignment="center"
            android:background="#8c000000"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="bottom"/>
    <!--</LinearLayout>-->
</android.support.design.card.MaterialCardView>
